doctype html
mixin item(item, url)
  li
    a(href=url class=`item ${path == url ? 'active' : ''}`)=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul
        +item('Strona główna', '/')
        +item('Aktualności', '/news')
        +item('Quiz', '/quiz')
        +item('Admin', '/admin')
    block content
